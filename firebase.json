{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "docs",
      "src",
      "reference",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": ".",
    "ignore": [
      ".git",
      ".github",
      "node_modules",
      "build",
      "public",
      "src/client",
      "docs"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
